{
    "name": "brightfish/digestif",
    "description": "Calculate Message Digest on data, to make unique URLs",
    "keywords": [
        "brightfish",
        "digestif"
    ],
    "homepage": "https://github.com/brightfish/digestif",
    "license": "MIT",
    "authors": [
        {
            "name": "Brightfish",
            "email": "p.forret@brightfish.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Brightfish\\Digestif\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brightfish\\Digestif\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
